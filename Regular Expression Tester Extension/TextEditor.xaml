<Window x:Class="AndreasAndersen.Regular_Expression_Tester_Extension.TextEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text" Height="500" Width="600" Icon="/Regular%20Expression%20Tester%20Extension;component/Resources/SmallRegExIcon.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="TextEditorBox" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" AcceptsTab="True" Margin="5" Grid.Row="0" Grid.Column="0" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0">
            <Button Content="Cancel" Name="buttonCancel" Height="23" Width="75" Margin="5" IsCancel="True" />
            <Button Content="Ok" Name="buttonOk" Height="23" Width="75" Margin="5" IsDefault="True" Click="buttonOk_Click" />
        </StackPanel>
    </Grid>
</Window>
